{
  "$schema": "https://schemas.wp.org/trunk/block.json",
  "apiVersion": 3,
  "name": "moraqmen-blocks/hero-banner",
  "title": "Hero Banner",
  "description": "Full-width hero section with image, text overlay, and CTA button",
  "category": "layout",
  "icon": "cover-image",
  "supports": {
    "html": false,
    "fullWidth": true,
    "align": ["full"],
    "color": {
      "background": true,
      "text": true,
      "gradient": true
    },
    "spacing": {
      "padding": true,
      "margin": true
    },
    "typography": {
      "fontSize": true,
      "lineHeight": true
    }
  },
  "attributes": {
    "headline": {
      "type": "string",
      "default": "Welcome to Our Website"
    },
    "subheadline": {
      "type": "string",
      "default": "Create an impactful first impression"
    },
    "ctaText": {
      "type": "string",
      "default": "Get Started"
    },
    "ctaUrl": {
      "type": "string",
      "default": "#"
    },
    "backgroundImageUrl": {
      "type": "string",
      "default": ""
    },
    "overlayOpacity": {
      "type": "number",
      "default": 0.4
    },
    "minHeight": {
      "type": "string",
      "default": "500px"
    }
  },
  "editorScript": "file:./index.js",
  "editorStyle": "file:./style.scss",
  "style": "file:./style.scss"
}
